@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table id="tbl1" class="table table-hover mt-4">
    <thead>
        <tr>
            <th>Satış ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Ürün Adet</th>
            <th>Ürün Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.SatisID</td>
                <td>@x.Urun.UrunAd</td>
                <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
                <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
                <td>@x.Adet</td>
                <td>@x.Fiyat</td>
                <td>@x.ToplamTutar</td>
                <td>@x.Tarih.Day.@x.Tarih.Month.@x.Tarih.Year</td>
                <td><a href="/Satis/SatisGetir/@x.SatisID" class="btn btn-info">Güncelle</a></td>
                <td><a href="/Satis/SatisDetay/@x.SatisID" class="btn btn-warning">Detay</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Satis/YeniSatis/" class="btn btn-success">Yeni Satış Yap</a>


