@model MvcOnlineTicariOtomasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "YeniKalem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="mt-4">Yeni Kalem Girişi</h2>

<form class="mt-4 form-group" method="post">
    <div class="mb-3">
        <label class="font-weight-bold mb-2" for="inputEmailAddress">Açıklama</label>
        @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <label class="font-weight-bold mb-2" for="inputEmailAddress">Miktar</label>
        @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <label class="font-weight-bold mb-2" for="inputEmailAddress">Birim Fiyat</label>
        @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })
    </div>
    @*<div class="mb-3">
        <label class="font-weight-bold mb-2" for="inputEmailAddress">Fatura ID</label>
        @Html.TextBoxFor(x => x.Faturaid, new { @class = "form-control" })
    </div>*@
    <div class="form-group mt-4 mb-0"><button class="btn btn-success btn-block">Kalem Ekle</button></div>
</form>


