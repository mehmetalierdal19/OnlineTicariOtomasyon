@model MvcOnlineTicariOtomasyon.Models.Siniflar.Faturalar
@{
    ViewBag.Title = "FaturaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4">Fatura Güncelleme Sayfası</h2>

@using (Html.BeginForm("FaturaGuncelle", "Fatura", FormMethod.Post))
{
    <div class="form-group mt-4">
        <div class="mb-3">
            <label class="font-weight-bold mb-2" for="inputEmailAddress">Seri No</label>
            @Html.HiddenFor(x => x.FaturaID)
            @Html.TextBoxFor(x => x.FaturaSeriNo, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label class="font-weight-bold mb-2" for="inputEmailAddress">Sıra No</label>
            @Html.TextBoxFor(x => x.FaturaSiraNo, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label class="font-weight-bold mb-2" for="inputEmailAddress">Vergi Dairesi</label>
            @Html.TextBoxFor(x => x.VergiDairesi, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label class="font-weight-bold mb-2" for="inputEmailAddress">Teslim Eden</label>
            @*@Html.TextBoxFor(x => x.Kategoriid, new { @class = "form-control py-4", @placeholder = "Ürün Kategorisi Giriniz" })*@
            @Html.TextBoxFor(x => x.TeslimEden, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label class="font-weight-bold mb-2" for="inputEmailAddress">Teslim Alan</label>
            @Html.TextBoxFor(x => x.TeslimAlan, new { @class = "form-control" })
        </div>
        <div class="form-group mt-4 mb-0"><button class="btn btn-success btn-block">Güncelle</button></div>
    </div>
}

