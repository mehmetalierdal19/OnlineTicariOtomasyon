@model MvcOnlineTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4">Kategori Güncelleme Sayfası</h2>

<form class="mt-5" method="post">
</form>
@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        <label class="font-weight-bold mb-2" for="inputEmailAddress">Kategori Ad</label>
        @*<input class="form-control py-4" id="inputEmailAddress" type="email"  aria-describedby="emailHelp" placeholder="Enter email address" />*@
        @Html.TextBoxFor(x => x.KategoriID, new { @class = "form-control py-4", @type = "hidden" })
        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control py-4", @placeholder = "Kategori Adı Giriniz" })

    </div>
    <div class="form-group mt-4 mb-0"><button class="btn btn-info btn-block">Güncelle</button></div>
}