@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "CariSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-5">Departman Personel Satış</h2>

<ol class="breadcrumb mt-4">
    <li class="breadcrumb-item active">Müşteri Adı: @ViewBag.cariad</li>
</ol>

<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th>Satış ID</th>
            <th>Ürün</th>
            <th>Personel</th>
            <th>Fiyat</th>
            <th>Adet</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Yazdır</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.SatisID</td>
                <td>@x.Urun.UrunAd</td>
                <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
                <td>@x.Fiyat</td>
                <td>@x.Adet</td>
                <td>@x.ToplamTutar</td>
                <td>@x.Tarih</td>
                <td><a href="#" class="btn btn-info">Yazdır</a></td>
            </tr>
        }
    </tbody>
</table>
