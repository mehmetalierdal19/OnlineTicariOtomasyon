@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th>Departman ID</th>
            <th>Departman</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.DepartmanID</td>
                <td>@x.DepartmanAd</td>
                <td><a href="/Departman/DepartmanSil/@x.DepartmanID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Departman/DepartmanGetir/@x.DepartmanID" class="btn btn-info">Güncelle</a></td>
                <td><a href="/Departman/DepartmanDetay/@x.DepartmanID" class="btn btn-warning">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Departman/DepartmanEkle/" class="btn btn-success">Yeni Departman Ekle</a>


