@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th>Personel ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Görsel</th>
            <th>Departman</th>
            <th>Güncelle</th>
            <th>Satışlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.PersonelID</td>
                <td>@x.PersonelAd</td>
                <td>@x.PersonelSoyad</td>
                <td>@x.PersonelGorsel</td>
                <td>@x.Departman.DepartmanAd</td>
                <td><a href="/Personel/PersonelGetir/@x.PersonelID" class="btn btn-info">Güncelle</a></td>
                <td><a href="/Departman/DepartmanDetay/@x.PersonelID" class="btn btn-warning">Satışlar</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-success">Yeni Personel Ekle</a>
